<script>
        var allergy_count = 0;
        var cold_count = 0;


        function allergyAdd(){
            allergy_count = allergy_count + 1;
		alert("allergy count: " + allergy_count);

        }

        function coldAdd(){
            cold_count = cold_count + 1;
		alert("cold count: " + cold_count);
        }

	function results(){
		var total = allergy_count + cold_count;
		alert("allergy percentage;" + (allergy_count/total) * 100 + "/cold_percentage;" + (cold_count/total) * 100);
		var resultText= document.getElementById("results");
		resultText.innerHTML = "Probability it is allergies =" + allergyPercentage + "<br> Probability it is a cold =" + coldPercent;
			}
  </script>



